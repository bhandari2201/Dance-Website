extends base.pug

block scripts
    script(src='/static/index.js')

block style 
    style
      include ../static/style.css

block content
    section#firstsection 
        div.large Welcome to the best Dance Academy in the town
        div Dancing happens with full enthusiasm  

    section#secondsection
        h2 Different forms of dance 
        div.card 
            h3 Classical Dance
            div.cardbox 
                div.card-img
                    img(src="/static/img/1.png", alt="Classical dance")
                div.card-content 
                    p Pure Form of classical dance Teaching    
        div.card 
            h3 Western Dance 
            div.cardbox 
                div.card-img
                    img(src="/static/img/2.png", alt="Western Dance")
                div.card-content 
                    p All western Type Dance Teachers  
        div.card 
            h3 Party Dance
            div.cardbox 
                div.card-img
                    img(src="/static/img/3.jpg", alt="Party Dance")
                div.card-content 
                    p Dance teachers for a functon or party   



    section#sponsorsection 
        h2 Our Sponsors 
        div#sponsors 
            img(src="/static/img/logo1.png", alt="Sponsor Image", class="spImage")
            img(src="/static/img/logo2.png", alt="Sponsor Image", class="spImage")
            img(src="/static/img/logo3.png", alt="Sponsor Image", class="spImage")
            img(src="/static/img/logo4.png", alt="Sponsor Image", class="spImage")